<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cellulam.spring.db.test.dal.CourseDAO">
    <resultMap id="ResultMap" type="com.cellulam.spring.db.test.po.CourseDO">
        <id column="cid" jdbcType="BIGINT" property="cid" />
        <result column="cname" jdbcType="BIGINT" property="cname" />
        <result column="user_id" jdbcType="VARCHAR" property="userId" />
        <result column="status" jdbcType="BIGINT" property="status" />
        <result column="create_time" jdbcType="BIGINT" property="createTime" />
        <result column="update_time" jdbcType="BIGINT" property="updateTime" />
    </resultMap>

    <select id="getById" parameterType="long" resultMap="ResultMap">
        select * from course where cid = #{cid}
    </select>

    <insert id="add" parameterType="com.cellulam.spring.db.test.po.CourseDO"
            keyColumn="cid" keyProperty="cid">
          insert course (cid, cname, user_id, status, create_time, update_time)
          value (#{cid}, #{cname}, #{userId}, #{status}, #{createTime,javaType=java.time.LocalDateTime,jdbcType=BIGINT}, #{updateTime,javaType=java.time.LocalDateTime,jdbcType=BIGINT})
    </insert>

    <select id="getAll" resultMap="ResultMap">
        select * from course
    </select>

</mapper>

